const int buttonPin = 2; // Chân GPIO 2
int buttonState = 0;

void setup() {
  Serial.begin(115200);
  pinMode(buttonPin, INPUT_PULLUP); // Sử dụng điện trở kéo lên
}

void loop() {
  buttonState = digitalRead(buttonPin);

  if (buttonState == LOW) { // Nút được nhấn (với pull-up)
    Serial.println("Nút đã được nhấn!");
    // Thực hiện hành động khi nút được nhấn
  } else {
    // Thực hiện hành động khi nút không được nhấn
  }
  delay(10); //delay 10ms để ổn định tín hiệu
}
