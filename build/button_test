const int buttonPin = 0; // Chân GPIO 0
int buttonState = 0;

void setup() {
  Serial.begin(115200);
  pinMode(buttonPin, INPUT_PULLUP);
}

void loop() {
  buttonState = digitalRead(buttonPin);

  if (buttonState == LOW) { // Nút được nhấn (với pull-up)
    Serial.println("Nút đã được nhấn!");

  } else {

  }
  delay(10); //delay 10ms để ổn định tín hiệu
}
